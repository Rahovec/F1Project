<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rahovec.f1project">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DriverWins" />
        <activity
            android:name=".DriverPoles"
            android:label="@string/title_activity_driver_poles"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".TeamWins" />
        <activity android:name=".TeamPoles" />
        <activity android:name=".Tracks" />
        <activity android:name=".AllTimeWins" />
        <activity android:name=".AllTimePoles" />
        <activity android:name=".Statistics"></activity>
    </application>

</manifest>